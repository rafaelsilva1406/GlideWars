# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

resource_group_name = "rg-glidewars-prod"
location            = "eastus"
environment         = "prod"
project_name        = "glidewars"

# ACR name must be globally unique (alphanumeric only)
acr_name = "acrglidewarsunique123"

# DNS label must be globally unique
dns_name_label = "glidewars-game-unique123"

image_name = "glidewars"
image_tag  = "latest"

# Optional: SQL Database variables
# sql_server_name     = "sql-glidewars-unique123"
# sql_admin_username  = "sqladmin"
# sql_admin_password  = "YourSecurePassword123!"
